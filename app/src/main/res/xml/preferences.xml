<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/theme">

        <ListPreference
            app:defaultValue="@string/default_theme"
            app:entries="@array/theme"
            app:entryValues="@array/theme_values"
            app:key="@string/key_theme"
            app:title="@string/theme"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="#ffffff"
            app:entries="@array/widget_colors"
            app:entryValues="@array/widget_color_values"
            app:key="@string/key_widget_color"
            app:title="@string/widget_color"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <!--
        <PreferenceCategory app:title="@string/session">

            <SwitchPreferenceCompat app:key=""/>
        </PreferenceCategory>
    -->

</PreferenceScreen>