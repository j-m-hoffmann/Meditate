<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/theme">

        <SwitchPreferenceCompat
            app:key="@string/key_use_dark_theme"
            app:title="@string/use_dark_theme" />

        <DropDownPreference
            app:defaultValue="#ffffff"
            app:entries="@array/widget_colors"
            app:entryValues="@array/widget_color_values"
            app:key="@string/key_widget_color"
            app:title="@string/widget_color"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <!--
        <PreferenceCategory app:title="@string/session">

            <SwitchPreferenceCompat app:key=""/>
        </PreferenceCategory>
    -->

</PreferenceScreen>